---
import { Icon } from "astro-icon/components";
import { CustomerSignIn } from "@lloydjatkinson/astro-snipcart/astro";
---
<div class="cs-cart">
    <CustomerSignIn>
		<button class="cs-button-solid" aria-label="Sign in to your account." title="Sign in">
			<Icon name="mdi--person-arrow" />
            Sign in
		</button>
    </CustomerSignIn>
</div>


<style lang="less">
	.cs-cart {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: (8/16rem);
		color: var(--headerColor);
		cursor: pointer;
		transition: color 0.3s;

		&:hover {
			color: var(--primary);
		}

		svg {
			width: (24/16rem);
			height: (24/16rem);
		}
	}

	body.dark-mode {
		.cs-cart {
			color: var(--bodyTextColorWhite);
		}
	}
</style>
